{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "group": "build",
            "label": "build",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make -j",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "group": "build"
            }
        },
        {
            "group": "build",
            "label": "build debug",
            "type": "shell",
            "command": "mkdir -p build/debug && cd build/debug && cmake -DCMAKE_BUILD_TYPE=Debug ../.. && make -j",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "group": "build"
            }
        },
        {
            "label": "build & run",
            "group": "build",
            "command": "./build/main",
            "dependsOn": "build",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "group": "build"
            }
        },{
            "label": "build & run & test",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./build/test",
            "dependsOn": "build & run",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true,
                "group": "test"
            }
        }
    ]
}